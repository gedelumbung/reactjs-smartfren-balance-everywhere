{
  "short_name": "Smartpret Everywhere",
  "name": "Smartpret Everywhere",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Smartpret Everywhere"
  },
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["/static/css/main.css"],
      "js": ["/static/js/main.js"]
    }
  ]
}